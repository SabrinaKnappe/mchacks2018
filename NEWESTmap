<script>
mapboxgl.accessToken = 'pk.eyJ1IjoiYXNwaWxrZXZpdHoiLCJhIjoiY2pkN2xzYjB3NjE5eTJ3bzV5eTk3MWtlZyJ9.wkuVHng1Vbixhv0cYRSyeA';

var abbys = [-73.5732521, 45.507398];
var mcgill= [-73.574653, 45.508382];
var lacite= [-73.576529, 45.510402];
var map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/mapbox/light-v9',
    center: mcgill,
    zoom: 15
});

// create the popup
var popup = new mapboxgl.Popup()
    .setText('Construction on the Washington Monument began in 1848.');

// create the popup
var popup1 = new mapboxgl.Popup()
    .setText('Hey there!');

// create DOM element for the marker
var el = document.createElement('div');
el.id = 'marker';
    
var ek = document.createElement('div');
ek.id = 'marker2';

// create the marker
new mapboxgl.Marker(el)
    .setLngLat(abbys)
    .setPopup(popup) // sets a popup on this marker
    .addTo(map);

//another marker
new mapboxgl.Marker(ek)
    .setLngLat(lacite)
    .setPopup(popup1) // sets a popup on this marker
    .addTo(map);
    
</script>

